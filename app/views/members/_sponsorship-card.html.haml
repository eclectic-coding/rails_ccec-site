.card.border-0.bg-light.shadow-none
  .card-body.p-4
    .card-title
      %h2.h3.text-center
        = t('.sponsorship')

    = link_to members_sponsorship_path do
      %img.img-fluid.rounded.my-2{src: url('/sponsorship.webp'), alt: "Card image cap"}

    .card-text
      = t('.sponsorship_text')

      %div
        = link_to members_sponsorship_path, class: "btn mt-3 px-0 read-more" do
          = t('continue_reading')
          %i.bi.bi-arrow-right