<div class="grid grid-cols-1 sm:grid-cols-3 sm:gap-4 mb-4">
  <div>
    <%= pilgrim_form.label :street_address, class: "form-label required" %>
    <%= pilgrim_form.text_field :street_address, class: "form-control w-full" %>
    <%= component "shared/form_errors", resource: pilgrim_form.object, key: :street_address %>
  </div>
  <div>
    <%= pilgrim_form.label :city, class: "form-label required" %>
    <%= pilgrim_form.text_field :city, class: "form-control w-full" %>
    <%= component "shared/form_errors", resource: pilgrim_form.object, key: :city %>
  </div>
  <div>
    <%= pilgrim_form.label :state, class: "form-label required" %>
    <%= pilgrim_form.text_field :state, class: "form-control" %>
    <%= component "shared/form_errors", resource: pilgrim_form.object, key: :state %>
  </div>
  <div>
    <%= pilgrim_form.label :zipcode, class: "form-label required" %>
    <%= pilgrim_form.text_field :zipcode, class: "form-control" %>
    <%= component "shared/form_errors", resource: pilgrim_form.object, key: :zipcode %>
  </div>
  <div>
    <%= pilgrim_form.label :email, class: "form-label" %>
    <%= pilgrim_form.text_field :email, class: "form-control" %>
  </div>
  <div>
    <%= pilgrim_form.label :primary_phone, class: "form-label required" %>
    <%= pilgrim_form.text_field :primary_phone, class: "form-control", placeholder: t('.phone_placeholder') %>
    <%= component "shared/form_errors", resource: pilgrim_form.object, key: :primary_phone %>
  </div>
  <div>
    <%= pilgrim_form.label :work_phone, class: "form-label" %>
    <%= pilgrim_form.text_field :work_phone, class: "form-control", placeholder: t('.phone_placeholder') %>
  </div>
  <div>
    <%= pilgrim_form.label :alternative_phone, class: "form-label" %>
    <%= pilgrim_form.text_field :alternative_phone, class: "form-control", placeholder: t('.phone_placeholder') %>
  </div>
  <div>
    <%= pilgrim_form.label :occupation, class: "form-label" %>
    <%= pilgrim_form.text_field :occupation, class: "form-control" %>
  </div>
</div>