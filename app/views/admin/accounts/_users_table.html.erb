<%= turbo_frame_tag "users_table" do %>
  <table class="table table-sm small">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Invitation Sent</th>
        <th>Invitation Accepted</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr class="align-middle">
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.profile_roles %></td>
          <td><%= user.invitation_created_at %></td>
          <td><%= user.invitation_accepted_at %></td>
          <td>
            <%= link_to "Delete", admin_account_user_path(@account, user), method: :delete, data: { confirm: "Are you sure?" }, class: "float-end btn btn-sm btn-danger me-2" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
