= turbo_frame_tag @media_upload do
  .border.rounded.p-3.mb-3
    = form_with(model: [:admin, @media_upload]) do |form|
      .row
        .col-12.col-md-4.mb-3
          = form.label :name
          = form.text_field :name, class: "form-control"

        .col-12.col-md-2.mb-3
          = "Note"
        -#   = form.label :tag_id
        -#   = form.select :tag_id, options_from_collection_for_select(Tag.all, :id, :name), { include_blank: true }, class: "form-select"

        .col-12.col-md-6.mb-3
          = form.label :file
          = form.file_field :media_file, class: "form-control"
      .row
        .col-12
          .my-3
            = form.label :description
            = form.text_area :description, class: "form-control"

      .my-3
        = form.submit "Create", class: "btn btn-primary"
