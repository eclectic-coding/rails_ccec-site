<div class="card my-4">
  <%= form_with(model: [:admin, @editable]) do |f| %>
    <div class="flex flex-col md:flex-row">
      <div class="w-full md:w-1/4 flex-1 mb-4 md:mx-4">
        <%= f.label :shortname, class: "form-label" %>
        <%= f.text_field :shortname, class: "form-control" %>
        <%= old_component "shared/form_errors", resource: f.object, key: :shortname %>
      </div>

      <div class="w-full flex-1 mb-4 md:mx-4">
        <%= f.label :content, class: "form-label" %>
        <%= f.text_field :content, class: "form-control" %>
        <%= old_component "shared/form_errors", resource: f.object, key: :content %>
      </div>

      <div class="flex justify-items-end md:justify-items-start items-center md:mx-4">
        <%= f.submit @editable.persisted? ? t("update_btn") : t("create_btn"), class: "btn btn-primary" %>
        <%= link_to t("cancel_btn"), :back, class: "btn btn-outline-primary ms-4" %>
      </div>
    </div>
  <% end %>
</div>