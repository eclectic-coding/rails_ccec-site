.border.rounded.bg-white.p-3.mb-3
  %h2.h4= "New Venue"
  = form_for([:admin, @address]) do |f|
    .row.pb-3
      .col-12.col-md-6.col-lg-4
        %div.mb-3
          = f.label :name
          = f.text_field :name, required: true, class: "form-control"
      .col-12.col-md-6.col-lg-4
        %div.mb-3
          = f.label :street
          = f.text_field :street, required: true, class: "form-control"
      .col-12.col-md-6.col-lg-4
        %div.mb-3
          = f.label :city
          = f.select :city, CS.get(:US, :NC), {}, { required: true, class: "form-select" }
      .mt-3
        = f.submit address.persisted? ? t(".update_venue") : t(".create_venue"), class: "btn btn-primary"
        = link_to t('cancel_btn'), admin_addresses_path, class: "btn btn-link"