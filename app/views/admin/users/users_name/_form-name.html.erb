<%= tag.div class: "grid grid-cols-3 my-6 w-full lg:w-3/4", id: "edit_name_#{dom_id(user)}" do %>
  <div class="text-gray-800 font-bold uppercase">
    <%= t('admin.account_users.show.name') %>
  </div>

  <%= form_with(url: admin_user_users_name_path(@user), method: :put, id: "name-form") do |f| %>
    <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |msg| %>
        <div class="text-danger">
          <%= msg %>
        </div>
      <% end %>
    <% end %>

    <%= f.text_field :name, value: @user.name, class: "form-control-sm" %>
  <% end %>

  <div>
    <%= form_with(url: admin_user_users_name_path(@user), method: :put, id: "name-form") do |f| %>
      <%= f.submit t("save"), class: "btn-sm btn-primary ms-2" %>
      <%= f.submit t("cancel_btn"), class: "btn-sm btn-outline-primary ms-1" %>
    <% end %>
  </div>
<% end %>