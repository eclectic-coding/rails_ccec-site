<div class="card my-4 w-full md:w-1/2">
  <h3><%= t('.new_recipient') %></h3>
  <%= form_for([:admin, message_recipient]) do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
      <%= errors_for message_recipient, :name %>
    </div>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
      <%= errors_for message_recipient, :email %>
    </div>
    <div class="mb-3">
      <%= f.button t('.create_recipient'), class: "btn btn-primary" %>
      <%= link_to t("cancel_btn"), admin_messages_path, class: "btn btn-link text-capitalize" %>
    </div>
  <% end %>
</div>
