<div id="toast" class="container position-relative">
  <div data-controller="toast" data-delay="5000" class="toast position-absolute my-2 top-0 end-0" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-body border-start border-3 border-<%= bootstrap_class_for(msg_type) %>">
      <div class="d-flex justify-content-between align-content-center">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>
</div>