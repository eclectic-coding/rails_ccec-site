%li.nav-item.dropdown
  = link_to "#", id: "navbar-dropdown", class: "nav-link dropdown-toggle", data: { target: "nav-account-dropdown", bs_toggle: "dropdown",
  'dropdown-target': 'adminActivated', action: "mouseenter->dropdown#toggleAdminDropdown" }, aria: { haspopup: true, expanded: false } do
    = t('.admin')
  #nav-account-dropdown.dropdown-menu.dropdown-menu-end{"aria-labelledby" => "navbar-dropdown"}
    = link_to t('.admin_area'), admin_root_path, class: "dropdown-item"
    = link_to t('shared.user_profile.members_area'), members_path, class: "dropdown-item"
    .dropdown-divider
    = button_to t('logout_btn'), destroy_session_path(user), method: :delete, class: "dropdown-item"
