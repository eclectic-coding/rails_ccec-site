<div class="w-full sm:w-1/2 mx-auto my-8">
  <div class="flex justify-center">
    <%= render(Shared::PageTitleComponent.new(title: t('.title'))) %>
  </div>

  <div class="mt-8">
    <% @events.each do |month, event| %>
      <div class="mt-8">
        <h2 class="text-center mb-4 pb-2 border-b"><%= month.strftime("%B %Y") %></h2>
        <% event.each do |evt| %>
          <div class="flex justify-between mb-8" data-test-event="true">
            <div class="flex justify-center w-1/4 pt-4 text-3xl text-gray-600 font-bold">
              <%= evt.start_time.strftime("%-d") %>
            </div>
            <div class="w-3/4">
              <%= component "event/address",  event: evt %>

              <%= link_to event_path(evt) do %>
                <%= component "event/title",  event: evt %>
              <% end %>

              <%= component "event/address",  event: evt unless evt.address.nil? %>

              <%= content_tag :p do %>
                <%= evt.description %>
              <% end unless evt.description.nil? %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
